<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="janken.view.components.InvalidClassNotificationView"
      prefHeight="300.0" prefWidth="500.0"
    spacing="15">
        <padding>
            <Insets topRightBottomLeft="20" />
        </padding>
        <TextFlow>
            <Label text="%invalidClassMessage" wrapText="true" prefWidth="500.0"/>
        </TextFlow>
        <ListView fx:id="list"/>
        <Button text="Close" onAction="#closeWindow" alignment="BOTTOM_RIGHT"/>
</VBox>
